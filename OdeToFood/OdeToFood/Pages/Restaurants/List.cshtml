@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />           
            <span class="input-group-btn">
                <button class="btn btn-group-vertical" type="submit">Go!
                    @*<i class="glyphicon glyphicon-search"></i>*@
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @restaurant.Name
            </td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            @*Add a button to the table row to link to the details page. bind the restaurantId*@
            @* use a page helper to point to the detail page and pass the restaurant it with the route helper*@
            @*   route allows you to add a dash, then the name of an element *@
            <td>
                <a class="btn btn-lg"
                    asp-page="./Detail" 
                    asp-route-restaurantID="@restaurant.Id">...                 
                </a>
                <a class="btn btn-lg"
                    asp-page="./Edit"
                    asp-route-restaurantID="@restaurant.Id">
                    Upd
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

<div>@Model.Message</div>
